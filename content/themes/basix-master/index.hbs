{{!< default}}

<header id="js-hero" class="site-header hero spacer {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}" role="banner">

    <nav class="site-nav">
        {{#if @blog.logo}}<a class="site-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        <ol class="site-social subscribe-btn">
                    <li class="social__link--facebook social__link">
                        <a href="https://www.facebook.com/sharer/sharer.php?u=http://missuswells.ghost.io/why-you-need-an-authors-assistant/" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;" class="fa fa-facebook">
                            <span class="visually-hidden">Facebook</span>
                        </a>
                    </li>
                    <li class="social__link--twitter social__link">
                        <a href="https://twitter.com/share?text=Why%20You%20Need%20an%20Author%E2%80%99s%20Assistant&amp;url=http://missuswells.ghost.io/why-you-need-an-authors-assistant/" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;" class="fa fa-twitter">
                            <span class="visually-hidden">Twitter</span>
                        </a>
                    </li>
                    <li class="social__link--google social__link">
                        <a href="https://plus.google.com/share?url=http://missuswells.ghost.io/why-you-need-an-authors-assistant/" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;" class="fa fa-google">
                            <span class="visually-hidden">Google+</span>
                        </a>
                    </li>
                </ol>
    </nav>

    

</header>

<main id="content" class="wrapper" role="main">
    {{> "loop"}}
</main>
